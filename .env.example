# Environment variables for Render deployment

# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# Database URL (automatically set by Render when using internal database)
# For local development, use the external URL
DATABASE_URL=postgresql://grue_user:password@host/grue

# Node environment
NODE_ENV=production

# Server port (automatically set by Render)
PORT=3000