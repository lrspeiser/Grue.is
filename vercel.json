{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/v2/api/:path*",
      "destination": "/api/v2/api/:path*"
    },
    {
      "source": "/v2-debug",
      "destination": "/public/v2-index-debug.html"
    },
    {
      "source": "/v2",
      "destination": "/public/v2-index.html"
    },
    {
      "source": "/test-route",
      "destination": "/api/test"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}